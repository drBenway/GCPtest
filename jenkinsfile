pipeline {


    // this tool will be used for all stages/steps except over-written
    tools {nodejs "nodejs 9.3.0"}

    // use local docker file
    agent { dockerfile true }

    // read package.json
    def package = readJSON file: 'package.json'

    stages {
        stage('git'){
            steps{
                checkout scm
                echo package['version']
            }
        }
        stage('install') {
            steps {
                tool name: 'nodejs 9.3.0'
                sh 'npm install'
            }
        }
        stage('lint') {
            steps {
                tool name: 'nodejs 9.3.0'
                sh 'npm run lint'
            }
        }
        stage('test') {
            steps {
                tool name: 'nodejs 9.3.0'
                sh 'npm test'
            }
        }
        stage('dockerize') {
            steps {
                tool name: 'nodejs 9.3.0'

            }
        }
    }
}

{
  "name": "docker_web_app",
  "version": "1.0.0",
  "description": "Node.js on Docker",
  "author": "First Last <first.last@example.com>",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha ./test/unit/**/*.js -- --exit --ui bdd -R spec -t 5000",
    "test": "./node_modules/mocha/bin/_mocha ./test/unit/**/*.js --exit",
    "lint": "eslint *.js",
    "lint:fix": "eslint --fix *.js",
    "docerize": "docker build -t 'buildtest'$npm_package_version .",
    "build": "npm run test && npm run 'lint:fix' && npm run lint && npm run docerize"
  },
  "dependencies": {
    "express": "^4.16.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-html": "^1.6.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^4.0.1",
    "sinon": "^4.1.3"
  }
}
